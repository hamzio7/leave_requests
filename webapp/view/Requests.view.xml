<mvc:View controllerName="h7.hamzio7.leaverequests.controller.Request"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Table id="leaveTable" showNoData="true" growing="true" growingScrollToLoad="true" items="{/LeaveRequestSet}" alternateRowColors="true">
        <headerToolbar>
            <Toolbar id="_IDGenToolbar">
                <Title id="_IDGenTitle" text="Leave Requests" />
            </Toolbar>
        </headerToolbar>
        <columns>
            <Column id="_IDGenColumn1">
                <Text id="_IDGenText" text="Request ID" />
            </Column>
            <Column id="_IDGenColumn2">
                <Text id="_IDGenText1" text="Employee ID" />
            </Column>
            <Column id="_IDGenColumn3">
                <Text id="_IDGenText2" text="Start Date" />
            </Column>
            <Column id="_IDGenColumn4">
                <Text id="_IDGenText3" text="End Date" />
            </Column>
            <Column id="_IDGenColumn5">
                <Text id="_IDGenText4" text="Status" />
            </Column>
            <Column id="_IDGenColumn6" hAlign="Center" width="10rem">
                <Text id="_IDGenText10" text="Actions" />
            </Column>
        </columns>
        <items>
            <ColumnListItem id="_IDGenColumnListItem" press=".onShowPress" type="Navigation" highlight="{path: 'Status', formatter: '.statusHighlight'}">
                <cells>
                    <Text id="_IDGenText5" text="{RequestId}"/>
                    <Text id="_IDGenText6" text="{EmployeeId}" />
                    <Text id="_IDGenText7" text="{StartDate}" />
                    <Text id="_IDGenText8" text="{EndDate}" />
                    <Text id="_IDGenText9" text="{Status}" />
                    <FlexBox id="flexBox" direction="Row" justifyContent="Center" gap="20px" alignItems="Start">
                        <!-- <Button id="show" icon="sap-icon://show" class = "sapUiSmapxMarginEnd" press=".onShowPress" /> -->
                        <Button id="edit" icon="sap-icon://edit" press=".onEditPress" />
                        <Button id="delete" icon="sap-icon://delete" press=".onDeletePress" type="Reject" />
                    </FlexBox>
                </cells>
            </ColumnListItem>
        </items>
    </Table>
</mvc:View>
