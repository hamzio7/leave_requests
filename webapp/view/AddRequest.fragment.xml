<core:FragmentDefinition 
  controllerName="h7.hamzio7.leaverequests.controller.AddRequest"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout"
  xmlns:f="sap.ui.layout.form"
>
  <Dialog id="requestDialog"
          title="Create Leave Request"
          draggable="true"
          resizable="true">
    <content>
      <f:SimpleForm editable="true" layout="ResponsiveGridLayout">
        <Label text="Employee ID" />
        <Input value="{newRequest>/EmployeeId}" />
        <Label text="Start Date" />
        <DateTimePicker value="{newRequest>/StartDate}" displayFormat="yyyy-MM-dd HH:mm" />
        <Label text="End Date" />
        <DateTimePicker value="{newRequest>/EndDate}" displayFormat="yyyy-MM-dd HH:mm" />
        <Label text="Status" />
        <Input value="{newRequest>/Status}" />
      </f:SimpleForm>
    </content>
    <beginButton>
      <Button text="Save" press=".onSavePress" />
    </beginButton>
    <endButton>
      <Button text="Cancel" press="onCancelPress" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>