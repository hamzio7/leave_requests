<core:FragmentDefinition controllerName="h7.hamzio7.leaverequests.controller.AddRequest"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:layout="sap.ui.layout"
  xmlns:f="sap.ui.layout.form">
  <Dialog id="requestDialog" title="Create Leave Request" draggable="true" resizable="true">
    <content>
      <f:SimpleForm id="_IDGenSimpleForm1" editable="true" layout="ResponsiveGridLayout">
        <Label id="_IDGenLabel" text="Employee ID" />
        <Input id="_IDGenInput" value="{newRequest>/EmployeeId}" />
        <Label id="_IDGenLabel1" text="Start Date" />
        <DatePicker id="_IDGenDateTimePicker" value="{newRequest>/StartDate}" displayFormatType="Persian" displayFormat="yyyy-MM-dd" />
        <Label id="_IDGenLabel2" text="End Date" />
        <DatePicker id="_IDGenDateTimePicker1" value="{newRequest>/EndDate}" displayFormatType="Persian" displayFormat="yyyy-MM-dd" />
        <Label id="_IDGenLabel3" text="Status" />
        <Input id="_IDGenInput1" value="{newRequest>/Status}" />
      </f:SimpleForm>
    </content>
    <beginButton>
      <Button id="_IDGenButton" text="Save" press=".onSavePress" />
    </beginButton>
    <endButton>
      <Button id="_IDGenButton1" text="Cancel" press="onCancelPress" />
    </endButton>
  </Dialog>
</core:FragmentDefinition>