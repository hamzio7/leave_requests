<mvc:View controllerName="h7.hamzio7.leaverequests.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">
    <Page id="page" title="{i18n>title}">
        <content>
            <Toolbar id="toolbar">
                <Button id="btn_add_request" text="Request a Leave" press=".onOpenDialog" />
            </Toolbar>

            <mvc:XMLView id="requests" viewName="h7.hamzio7.leaverequests.view.Requests" />
        </content>
    </Page>
</mvc:View>
